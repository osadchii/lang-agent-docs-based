# Application
PROJECT_NAME=Lang Agent Backend
APP_ENV=local
DEBUG=true
API_V1_PREFIX=/api
LOG_LEVEL=INFO

# Security
SECRET_KEY=replace-me
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Data stores
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/lang_agent
REDIS_URL=redis://localhost:6379/0

# Docker Compose infrastructure (override DATABASE_URL/REDIS_URL for container hostnames)
POSTGRES_DB=lang_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
BACKEND_IMAGE=ghcr.io/osadchii/lang-agent-docs-based/backend

# Telegram
TELEGRAM_BOT_TOKEN=123456:ABCDEF-placeholder
TELEGRAM_WEBHOOK_URL=https://api.example.com/api/webhook
PRODUCTION_APP_ORIGIN=https://mini.lang-agent.app

# LLM / Providers
OPENAI_API_KEY=sk-your-openai-key
LLM_MODEL=gpt-4.1-mini
LLM_TEMPERATURE=0.7

# Networking
BACKEND_CORS_ORIGINS=https://mini.lang-agent.app

# Container tag
BACKEND_IMAGE_TAG=latest
